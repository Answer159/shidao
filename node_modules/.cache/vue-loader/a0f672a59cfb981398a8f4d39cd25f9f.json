"textarea\"\n          maxlength=\"300\"\n          show-word-limit\n          :clearable=\"true\"\n          :rows=\"5\"\n      >\n      </el-input>\n    </el-row>\n    <el-row>\n      <el-button @click=\"sendComment\" style=\"margin-left: 92%;margin-top: 10px\" type=\"primary\">发送</el-button>\n    </el-row>\n\n  </div>\n  \n</div>\n  \n</template>\n\n<script>\nimport Comment from '../../../components/contant/comment/Comment.vue';\nimport {sendComment} from \"../../../network/comment\";\n\nexport default {\n  name: \"questionComment\",\n  components:{\n    Comment\n  },\n  computed:{\n    holder(){\n      return this.head;\n    }\n  },\n  props: {\n    comments:[],\n    quesitonId:null,\n  },\n  data() {\n    return {\n      textarea: '',\n      replayId:-1,\n      head:\"请输入评论\",\n      showContent:\"\",\n    }\n  },\n  methods:{\n    focusNext(replayId,username){\n      this.$refs.input.focus();\n      this.head = \"@\"+username+\"\";\n      this.replayId = replayId;\n    },\n    sendComment(){\n      console.log(this.textarea)\n      console.log(this.quesitonId)\n      console.log(this.replayId)\n      sendComment(this.textarea,this.quesitonId,this.replayId).then((res)=>{\n        this.$message({\n          type:\"success\",\n          message:`评论成功!`\n        })\n        this.textarea = \"\";\n        this.replayId = -1;\n        this.head = \"请输入评论\";\n        this.comments.push(res.data.comment);\n        console.log(this.comments);\n      })\n    }\n  }\n\n}\n</script>\n\n<style scoped>\n\n.main{\n  padding: 20px 0;\n}\n\n.top{\n  padding: 0,20px;\n  padding-bottom: 20px;\n}\n\n</style>"]}]}